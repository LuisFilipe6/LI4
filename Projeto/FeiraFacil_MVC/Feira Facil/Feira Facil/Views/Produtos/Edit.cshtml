@model Feira_Facil.Models.Produto

@{
    ViewData["Title"] = "Editar";
}

<h1><center>Editar Produto</center></h1>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProduto" />
            <div class="form-group">
                <label asp-for="idVendedor" class="control-label"></label>
                <input asp-for="idVendedor" class="form-control" />
                <span asp-validation-for="idVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idStand" class="control-label"></label>
                <input asp-for="idStand" class="form-control" />
                <span asp-validation-for="idStand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="preco" class="control-label"></label>
                <input asp-for="preco" class="form-control" />
                <span asp-validation-for="preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagens" class="control-label"></label>
                <input asp-for="imagens" class="form-control" />
                <span asp-validation-for="imagens" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Stands" asp-controller="Vendedores">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
