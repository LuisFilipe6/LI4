@model IEnumerable<Feira_Facil.Models.Produto>



<h1><center>Produtos no Stand</center></h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idVendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idStand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagens)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.idVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idStand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.imagens)
            </td>
            <td>
                    <a asp-action="Delete" asp-route-id="@item.IdProduto"><button class="btn btn-danger">Apagar</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
